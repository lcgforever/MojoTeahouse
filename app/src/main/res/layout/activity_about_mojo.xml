<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutMojoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/ic_back_white"
        app:title="@string/about_mojo_activity_title"
        app:titleTextAppearance="@style/Toolbar.SmallTextAppearance" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="?attr/colorPrimary"
        android:paddingTop="10dp"
        android:src="@drawable/dummy_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fontFamily="@string/roboto"
        android:lineSpacingExtra="2dp"
        android:padding="20dp"
        android:text="@string/about_mojo_activity_introduction"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/about_mojo_activity_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:text="@string/about_mojo_activity_business_address"
                android:textAppearance="@style/TextAppearance.AppCompat.Body" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="56dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/about_mojo_activity_phone_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:text="@string/about_mojo_activity_business_phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Body" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="56dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/about_mojo_activity_email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:text="@string/about_mojo_activity_business_email"
                android:textAppearance="@style/TextAppearance.AppCompat.Body" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="56dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/about_mojo_activity_hours_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:text="@string/about_mojo_activity_business_hours"
                android:textAppearance="@style/TextAppearance.AppCompat.Body" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
