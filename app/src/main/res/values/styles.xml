<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/control_normal</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="actionModeStyle">@style/Style.ActionMode.Appreance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeStyle">@style/Style.ActionMode.Appreance</item>
        <item name="android:alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatusBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.Dialog.NoTitle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.AppCompat.Title.DialogTitle
        </item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Style.ActionMode.Appreance" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/text_gray</item>
        <item name="titleTextStyle">@style/Toolbar.SmallTextAppearance</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.DialogTitle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Toolbar.SmallTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.Normal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/text_color_state</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

</resources>
